            android:name="jurka93.todolist2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jurka93.todolist2.DetailsActivity"
            android:label="@string/app_name" >
