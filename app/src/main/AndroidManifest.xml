        <activity
            android:name="jurka93.todolist2.MyPreferenceActivity"
            android:label="@string/title_activity_my_preference" >
        </activity>

        <meta-data android:name="MY_DB_NAME" android:value="ToDoList.db" />
        <meta-data android:name="MY_DB_VERSION" android:value="1" />
        <meta-data android:name="AA_MODELS" android:value="jurka93.todolist.ToDoItem" />

